# Production Environment Configuration
# Copy this file to .env.production and fill in your production values

# Database Configuration - REQUIRED
DATABASE_URL="postgresql://username:password@host:port/database"

# JWT Configuration - REQUIRED
JWT_SECRET="your-super-secure-jwt-secret-key-min-32-chars"
JWT_EXPIRES_IN="7d"

# Server Configuration
PORT=3001
NODE_ENV="production"

# CORS Configuration - REQUIRED
FRONTEND_URL="https://your-app.s3-website-region.amazonaws.com"

# Stripe Configuration - REQUIRED
STRIPE_SECRET_KEY="sk_live_..."  # Live Stripe secret key
STRIPE_WEBHOOK_SECRET="whsec_..."  # Production webhook signing secret
STRIPE_PRICE_IDS='{"ANALYST_PRO":"price_live_...", "FOUNDATION":"price_live_...", "FOUNDATION_PRO":"price_live_..."}'

# Email Configuration - OPTIONAL
SMTP_HOST="smtp.gmail.com"
SMTP_PORT="587"
SMTP_SECURE="false"
SMTP_USER="your-email@gmail.com"
SMTP_PASS="your-app-password"
CONTACT_EMAIL="support@yourdomain.com"

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=1000
